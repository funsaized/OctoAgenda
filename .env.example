# Anthropic API Configuration
ANTHROPIC_API_KEY=sk-ant-api03-your-api-key-here

# Source Configuration
SOURCE_URL=https://example.com/events
SOURCE_SELECTOR=.event-item
SOURCE_USER_AGENT=Mozilla/5.0 (compatible; EventScraper/1.0)

# Calendar Service Configuration (Optional - for CalDAV integration)
CALENDAR_ENDPOINT=https://calendar.example.com/dav/calendars/username/events/
CALENDAR_AUTH_USER=username
CALENDAR_AUTH_PASS=password
CALENDAR_NAME=Events Calendar

# Processing Configuration
BATCH_SIZE=10
RETRY_ATTEMPTS=3
CACHE_TTL=3600
DEBUG_MODE=false

# Timezone Configuration
DEFAULT_TIMEZONE=America/New_York
DETECT_TIMEZONE=true

# Optional: Monitoring
MONITORING_WEBHOOK=https://hooks.example.com/webhook
ERROR_NOTIFICATION_EMAIL=admin@example.com

# Development Configuration
ESLINT_USE_FLAT_CONFIG=false
